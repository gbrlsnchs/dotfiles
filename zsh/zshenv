DISABLE_AUTO_UPDATE=true

export GTK_THEME="gruvbox-dark-gtk"

if [[ -z "${NVIM_LISTEN_ADDRESS}" ]]; then
  export EDITOR="nvim"
  export VISUAL="nvim"
  export MANPAGER="nvim +'Man! | setlocal number relativenumber'"
  export PAGER="nvim +'Man! | setlocal number relativenumber'"
  export GIT_PAGER="nvim +'Man! | setfiletype git | setlocal number relativenumber'"
else
  export EDITOR="nvr"
  export VISUAL="nvr -cc tabnew --remote-wait +'setlocal bufhidden=wipe'"
  export MANPAGER="nvr -cc tabnew --remote-wait +'Man! | setlocal number relativenumber'"
  export PAGER="nvr -cc tabnew --remote-wait +'Man! | setlocal bufhidden=wipe number relativenumber' -"
  export GIT_PAGER="nvr -cc tabnew --remote-wait +'Man! | setlocal bufhidden=wipe number relativenumber | setfiletype git' -"
fi

export GIT_EDITOR=$VISUAL
export MANWIDTH=999

# cargo
path+=("$HOME/.cargo/bin")

# go
path+=("$(go env GOPATH)/bin")

# python
path+=("$HOME/.poetry/bin")

# latex
path+=("/opt/texlive/2021/bin/$(uname --machine)-$(uname --kernel-name | tr '[:upper:]' '[:lower:]')")

export FZF_DEFAULT_OPTS='
  --color fg:#ebdbb2,bg:#282828,hl:#fabd2f,fg+:#ebdbb2,bg+:#3c3836,hl+:#fabd2f
  --color info:#83a598,prompt:#bdae93,spinner:#fabd2f,pointer:#83a598,marker:#fe8019,header:#665c54
'
export FZF_DEFAULT_COMMAND="fd --type f --hidden --exclude '.git'"

# homemade scripts
path+=("$HOME/scripts")

# Version managers.
source /usr/share/nvm/init-nvm.sh

typeset -U path

# custom user completions
fpath+=($XDG_DATA_HOME/zfunc)
