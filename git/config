# vim: ft=gitconfig

[user]
	name = Gabriel Sanches
	email = gabriel@gsr.dev
[core]
	editor = nvim
[init]
	defaultBranch = trunk
[pull]
	rebase = true
[diff]
	tool = neovim-remote
[difftool "neovim-remote"]
	cmd = nvr -s -d $LOCAL $REMOTE
[merge]
	tool = neovim-remote
[mergetool]
	keepBackup = false
[mergetool "neovim-remote"]
	cmd = nvr -s -d $LOCAL $BASE $REMOTE $MERGED -c 'wincmd J | wincmd ='
[alias]
	shove = push --force-with-lease
	peek = diff --staged
	dd = reset --soft HEAD^
	ls = status --short --ignore-submodules=dirty
	echo = commit --verbose
	mend = commit --amend --no-edit
	flip = switch -
	yank = pull --rebase --autostash
	wipe = restore .
	stem = rebase --autostash
	mirror = push --mirror mirror
[include]
	path = custom/config
