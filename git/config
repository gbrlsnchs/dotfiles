# vim: ft=gitconfig

[user]
	name = Gabriel Sanches
	email = gabriel@gsr.dev
[core]
	editor = nvim
[init]
	defaultBranch = trunk
[pull]
	rebase = true
[diff]
	tool = neovim-remote
[difftool "neovim-remote"]
	cmd = nvr -s -d $LOCAL $REMOTE
[merge]
	tool = neovim-remote
[mergetool]
	keepBackup = false
[mergetool "neovim-remote"]
	cmd = nvr -s -d $LOCAL $BASE $REMOTE $MERGED -c 'wincmd J | wincmd ='
[alias]
	pushf = push --force-with-lease
	sdiff = diff --staged
	rsoft = reset --soft HEAD^
	shorts = status --short --ignore-submodules=dirty
	vomit = commit --verbose
	mend = commit --amend --no-edit
	flip = switch -
