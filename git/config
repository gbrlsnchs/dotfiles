# vim: ft=gitconfig

[user]
	name = Gabriel Sanches
	email = gabriel@gsr.dev
[core]
	editor = nvim
[init]
	defaultBranch = trunk
[pull]
	rebase = true
[diff]
	tool = neovim-remote
[difftool "neovim-remote"]
	cmd = nvr -s -d $LOCAL $REMOTE
[merge]
	tool = neovim-remote
[mergetool]
	keepBackup = false
[mergetool "neovim-remote"]
	cmd = nvr -s -d $LOCAL $BASE $REMOTE $MERGED -c 'wincmd J | wincmd ='
[alias]
	force = push --force-with-lease
	staged = diff --staged
	rollback = reset --soft HEAD^
	files = status --short --ignore-submodules=dirty
	refer = commit --verbose
	mend = commit --amend --no-edit
	flip = switch -
	yank = pull --rebase --autostash
	wipe = restore .
[include]
	path = custom/config
