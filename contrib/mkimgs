#!/bin/sh

target="$1"
target="${target:-local}"

for image in images/"$target"/*; do
	tag="$(basename "$image")"

	echo "####################################################"
	echo "Building image for '$tag'"
	echo "Context: '$image'"
	echo "####################################################"

	if [ "$target" = "root" ]; then
		sudo podman build --tag "$tag" "$image"
	else
		podman build --tag "$tag" "$image"
	fi
done
