#!/bin/sh

read -r -d '' config <<'EOF'
Steam: steam
Discord: discord
Firefox: firefox
Foot: footclient
Lock: waylock -init-color "0x${BG_COLOR}" -input-color "0x${COLOR_4}" -fail-color "0x${COLOR_1}"
Lutris: lutris
Suspend to disk: sudo s2disk
Suspend to RAM: sudo s2ram
EOF

program="$(echo "$config" | sort | yq --raw-output 'keys | .[]' | dmenu)"
echo "$config" | yq --raw-output ."$program" | xargs -I {} swaymsg exec '{}'
